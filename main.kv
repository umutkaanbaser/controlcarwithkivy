<Popups@Popup>:
	title:"Robotun ip adresini giriniz"
	#size_hint:(0.5,0.9)
	#size:200,200
	
	#RelativeLayout:
	TextInput:
		id:ip_text
		hint_text:'Robotun ip adresini giriniz'
		size_hint:1,0.25
		pos_hint:{"x":0,"y":0.3}
		on_text:app.ip_adres_kontrol()
			
	Label:
		id:label_deneme
		text:"Henüz bir değer girilmedi"
		size_hint:1,0.15
		pos_hint:{"x":0,"y":0.7}

