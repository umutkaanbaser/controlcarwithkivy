<pencere1>:
	canvas:
		Color:
			rgba:self.bg_color
		Rectangle:
			pos:self.pos
			size:self.size

	id:pen_1
	font_type:'fonts/Pacifico-Regular.ttf'

	Image:
		source:"img/logo.png"
		allow_stretch: True
		size_hint:0.8,0.8
		pos_hint:{"center_x":0.5,"center_y":0.65}
	
	Label:
		text:"şirket ismi"
		pos_hint:{"center_x":0.5,"center_y":0.45}
		color:1,1,1
		font_size:"30px"
		font_name: pen_1.font_type
	Label:
		text:"Tarim 4.0"
		pos_hint:{"center_x":0.5,"center_y":0.40}
		color:1,1,1
		font_size:"20px"
		font_name: pen_1.font_type

<pencere3>:
	canvas:
		Color:
			rgba:self.bg_color
		Rectangle:
			pos:self.pos
			size:self.size
	
	id:pen_3
	font_type:'fonts/Pacifico-Regular.ttf'
	
	Label:
		text:"Manuel Sürüş mü, otonom mu ?"
		pos_hint:{"center_x":0.5,"center_y":0.70}
		color:1,1,1
		font_size:"25px"
		font_name: pen_3.font_type
		halign: 'center'
		valign: 'middle'
	
	Button:
		text:"Manuel"
		pos_hint:{"center_x":0.7,"center_y":0.5}
		color:0,0,0
		size_hint:0.3,0.1
		on_press:app.secim_yap_manuel("manuel")
		background_normal:''
		background_color:(0,0,0,0)
		canvas.before:
			Color:
				rgba:(1,1,1,1)
			
			RoundedRectangle:
				size:self.size
				pos:self.pos
				radius:[(20, 20), (20, 20), (20, 20), (20, 20)]
	Button:
		text:"Otonom"
		pos_hint:{"center_x":0.3,"center_y":0.5}
		color:0,0,0
		size_hint:0.3,0.1	
		on_press:app.secim_yap_manuel("otonom")
		background_normal:''
		background_color:(0,0,0,0)
		canvas.before:
			Color:
				rgba:(1,1,1,1)
			
			RoundedRectangle:
				size:self.size
				pos:self.pos
				radius:[(20, 20), (20, 20), (20, 20), (20, 20)]
	
	Image:
		source:"img/logo.png"
		allow_stretch: True
		size_hint:0.45,0.45
		pos_hint:{"center_x":0.5,"center_y":0.13}


